{
  "name": "arbhearing",
  "version": "1.0.0",
  "description": "Project 3",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently -k \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build && webpack --env.ENVIRONMENT=production --config webpack.config.build.js",
    "heroku-postbuild": "npm run build",
    "dev": "webpack --env.ENVIRONMENT=development --config webpack.config.dev.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "concurrently": "^4.1.0",
    "dotenv": "^8.2.0",
    "gh-pages": "^2.1.1",
    "@types/lodash.invoke": "^4.5.6",
    "@types/lodash.sortby": "^4.7.6",
    "@types/lodash.uniqby": "^4.7.6",
    "@types/mapbox-gl": "^1.5.2",
    "@types/redux-logger": "^3.0.7",
    "axios": "^0.19.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "webpack-cli": "^3.3.10"
  }
}
